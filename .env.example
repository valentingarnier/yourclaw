# =============================================================================
# YourClaw Environment Variables
# =============================================================================
# Copy to .env and fill in values: cp .env.example .env

# Supabase
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=eyJ...                   # public anon key (safe for frontend)
SUPABASE_SERVICE_ROLE_KEY=eyJ...            # secret service role key (backend only)

# Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxx
TWILIO_AUTH_TOKEN=secret
TWILIO_WHATSAPP_NUMBER=whatsapp:+15557589499
TWILIO_TEMPLATE_ASSISTANT_READY=HXf1d69b40b8b9a82617d8d440ff51f152  # "Assistant ready" template

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_ID=price_xxx                  # $20/month subscription price ID

# Hetzner Host Server
HOST_SERVER_IP=1.2.3.4
HOST_SERVER_SSH_KEY_PATH=~/.ssh/yourclaw_host

# Shared LLM Keys
ANTHROPIC_API_KEY=sk-ant-xxx               # shared Anthropic key for all users
OPENAI_API_KEY=sk-proj-xxx                 # shared OpenAI key for GPT models
GOOGLE_API_KEY=AIzaSy-xxx                  # shared Google key for Gemini models

# Web Search
BRAVE_API_KEY=BSA-xxx                      # Brave Search API key (for OpenClaw web search)

# Google OAuth (for integrations: Calendar, Gmail, Drive)
# Same Google Cloud project as Supabase auth, but separate OAuth client
GOOGLE_CLIENT_ID=xxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxx

# Resend (tool request emails)
RESEND_API_KEY=re_xxx                          # from resend.com dashboard

# Security
ENCRYPTION_KEY=                             # Fernet key (generate: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")

# App URLs
API_URL=http://localhost:8000
APP_URL=http://localhost:3000
MARKETING_URL=http://localhost:3001

# Rate Limits
RATE_LIMIT_MSG_PER_MIN=5
RATE_LIMIT_MSG_PER_DAY=100

# Worker
WORKER_POLL_INTERVAL=5
WORKER_MAX_ATTEMPTS=3

# Mock Mode (local dev)
MOCK_TWILIO=true
MOCK_CONTAINERS=true
MOCK_STRIPE=true
